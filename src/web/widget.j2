<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="assets/style.css">

  <title>Pocket Widget</title>
</head>

<body class="compact">
  <script>
      // Set the dark theme if set in the URL...
      const urlParams = new URLSearchParams(window.location.search)
      if (urlParams.get('theme') == 'dark') {
          document.body.classList.add('dark');
      }
  </script>

  <div class="widget-container">
    <div class="top">
    <div class="top-title">{{ username }}'s Latest Saves</div>
      <a href="https://getpocket.com/">
        <img class="logo logo-dark" alt="Pocket" src="assets/pocket_logo.dark.svg">
        <img class="logo logo-light" alt="Pocket" src="assets/pocket_logo.svg">
      </a>
    </div>

    {% for article in articles %}
    <div class="article">
      <img class="image" alt="preview image" src="{{ article.image }}">
      <div class="title" title="{{ article.title }}">{{ article.title }}</div>
      <div class="description">{{ article.excerpt }}</div>
      <span class="read-more"><a href="{{ article.link }}">Read More</a> <span class="read-time">{{ article.time_to_read }} min{% if article.time_to_read > 1 %}s{% endif %}</span></span>
    </div>
    {% endfor %}

    <div class="bottom">Generated by <a href="{{ app_url }}">{{ app_name }}</a></div>
  </div>

</body>

</html>